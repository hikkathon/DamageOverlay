                         Points="0,8,
                         0,120,
                         280,120,
                         288,128,
                         295,120,
                         300,120
                         300,8,
                         295,8,
                         279,8"/>
                <Grid Height="132" Width="299" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 10 0 0">
                    <StackPanel Orientation="Vertical">
                        <Button x:Name="BtnLoadStats" Style="{StaticResource CmbBtn}" Click="BtnLoadStats_Click">
                            <TextBlock Text="Загрузить статистику"/>
                        </Button>
                        <Button Style="{StaticResource CmbBtn}" x:Name="TestEvent" Click="TestEvent_Click">
                            <TextBlock Text="О Программе"/>
                        </Button>
                        <Polygon Fill="White" Points="0,3,310,3" StrokeThickness="1" Stroke="#FF40454E"/>
                        <Button Style="{StaticResource CmbBtn}" Margin="0 3 0 0">
                            <Grid Width="299" Margin="-30 0 0 0">
                                <TextBlock Text="Урон/Блок" Margin="30 0 0 0" VerticalAlignment="Center"/>
                                <ToggleButton x:Name="toggleButton" IsChecked="True"
                                  Grid.Row="2" 
                                  Height="30" 
                                  Width="20" 
                                  HorizontalAlignment="Left" 
                                  VerticalAlignment="Center" 
                                  Margin="5 0 0 0"
                                  Foreground="#FFACB3BF" Click="toggleButton_Click">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="{x:Type ToggleButton}">
                                            <StackPanel Orientation="Horizontal">
                                                <Border Background="Black" HorizontalAlignment="Left"
                                                    BorderThickness="1"
                                                    CornerRadius="2" 
                                                    Height="20" 
                                                    Width="20">
                                                    <Border.Style>
                                                        <Style TargetType="{x:Type Border}">
                                                            <Setter Property="BorderBrush" Value="#FF333842"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="BorderBrush" Value="#FF51555C"/>
                                                                </Trigger>
                                                                <EventTrigger RoutedEvent="PreviewMouseDown">
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                                                                Duration="0:0:0.100" To="#FF333842"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </EventTrigger>
                                                                <EventTrigger RoutedEvent="PreviewMouseUp">
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                                                                Duration="0:0:0.100" To="#FF51555C"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </EventTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <Image Margin="4" Opacity=".3">
                                                        <Image.Style>
                                                            <Style>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsChecked, 
                                                                         RelativeSource = {RelativeSource AncestorType = {x:Type ToggleButton}}}" 
                                                                         Value = "true">
                                                                        <Setter Property="Image.Source" Value="/Assets/Images/Check.png"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
                                                </Border>
                                                <ContentPresenter Content="{TemplateBinding Content}" Margin="10 0 0 0" 
                                                  VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                            </StackPanel>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>
                            </Grid>
                        </Button>
                        <Button x:Name="BtnCloseOverlay" Style="{StaticResource CmbBtn}" Margin="0 3 0 0" Click="BtnCloseOverlay_Click">
                            <Grid Width="299" Margin="-30 0 0 0">
                                <TextBlock Text="Закрыть" Margin="30 0 0 0"/>
                                <fa:ImageAwesome Icon="Regular_WindowClose" 
                                     Width="13" Height="13" 
                                     Foreground="White"
                                     Margin="10 0 0 0" 
                                     HorizontalAlignment="Left"
                                     Opacity=".3"/>
                            </Grid>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>

        </Grid>

        <!-- Контейнер для скрывающего блока -->
        <Grid Grid.RowSpan="3" x:Name="GridInvisibleBlock" Visibility="Hidden">
            <Image Source="/Assets/Images/block.png" Width="160" Height="286" Margin="60 0 0 60" Opacity="1"/>
        </Grid>
    </Grid>

