        <!-- Контейнер для плашки нанесенного/заблокированного урона -->
        <Grid x:Name="GridDamagePanel" Grid.Row="1">
            <Image x:Name="imgAssistant" Grid.Column="1" Grid.Row="1"  Source="/Assets/Images/UI WOTB Assistant.png" Width="140" Height="90" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0 10 0 0" Opacity=".9"/>
<Label x:Name="DamageLabel" Content="unknown" Style="{StaticResource CustomFont}" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30 9 0 0" Opacity=".9"/>
            <Label x:Name="BlockedLabel" Content="unknown" Style="{StaticResource CustomFont}" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30 33 0 0" Opacity=".9"/>

            <Image gif:ImageBehavior.AnimatedSource="/Assets/Images/loadwinter.gif" Width="30" Height="39"/>

        </Grid>

        <!-- Контейнер для послебоевой статистики -->
        <Grid Grid.Row="2">

            <!-- Custom ComboBox Оленемер -->
            <Border x:Name="CbmBorder2"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom" 
                    Background="Black"
                    BorderThickness="1"
                    CornerRadius="2"
                    Margin="0 0 10 10"
                    Grid.Row="2" 
                    Height="24" 
                    Width="25"
                    Cursor="Hand">
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="BorderBrush" Value="#FF333842"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#FF51555C"/>
                            </Trigger>
                            <EventTrigger RoutedEvent="PreviewMouseDown">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                                        Duration="0:0:0.100" To="#FF333842"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="PreviewMouseUp">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                                        Duration="0:0:0.100" To="#FF51555C"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Button x:Name="BtnSetting" Style="{StaticResource ComboboxButton}" Click="BtnSetting_Click">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Solid_AlignJustify" 
                                     Width="15" Height="14" 
                                     Foreground="White">
                            <fa:ImageAwesome.Style>
                                <Style TargetType="{x:Type fa:ImageAwesome}">
                                    <Setter Property="Opacity" Value="0.3"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path = IsMouseOver, ElementName = CbmBorder2}" 
                                                         Value="True">
                                            <Setter Property="Opacity" Value="0.5"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, 
                                                AncestorType={x:Type Button},AncestorLevel=1},Path=IsPressed}" Value="True">
                                            <Setter Property="Opacity" Value="0.3"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </fa:ImageAwesome.Style>
                        </fa:ImageAwesome>
                    </StackPanel>
                </Button>
            </Border>

            <!-- Custom ComboBox Оленемер -->
            <Border x:Name="CbmBorderStata"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom" 
                    Background="Black"
                    BorderThickness="1"
                    CornerRadius="2"
                    Margin="0 0 50 10"
                    Grid.Row="2" 
                    Height="24" 
                    Width="25"
                    Cursor="Hand">
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="BorderBrush" Value="#FF333842"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#FF51555C"/>
                            </Trigger>
                            <EventTrigger RoutedEvent="PreviewMouseDown">
