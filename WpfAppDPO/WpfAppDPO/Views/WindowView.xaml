            <Label x:Name="Player_4"  Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left"  Foreground="White" Margin="408 0 0 0" FontSize="14" Style="{StaticResource CustomFont}"/>
            <Label x:Name="Player_5"  Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left"  Foreground="White" Margin="408 0 0 0" FontSize="14" Style="{StaticResource CustomFont}"/>
            <Label x:Name="Player_6"  Grid.Row="5" Grid.Column="0" HorizontalAlignment="Left"  Foreground="White" Margin="408 0 0 0" FontSize="14" Style="{StaticResource CustomFont}"/>
            <Label x:Name="Player_7"  Grid.Row="6" Grid.Column="0" HorizontalAlignment="Left"  Foreground="White" Margin="408 0 0 0" FontSize="14" Style="{StaticResource CustomFont}"/>
            <Label x:Name="Player_8"  Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Foreground="White" Margin="0 0 408 0" FontSize="14" Style="{StaticResource CustomFont}"/>
            <Label x:Name="Player_9"  Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Foreground="White" Margin="0 0 408 0" FontSize="14" Style="{StaticResource CustomFont}"/>
            <Label x:Name="Player_10" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Foreground="White" Margin="0 0 408 0" FontSize="14" Style="{StaticResource CustomFont}"/>
            <Label x:Name="Player_11" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" Foreground="White" Margin="0 0 408 0" FontSize="14" Style="{StaticResource CustomFont}"/>
            <Label x:Name="Player_12" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right" Foreground="White" Margin="0 0 408 0" FontSize="14" Style="{StaticResource CustomFont}"/>
            <Label x:Name="Player_13" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right" Foreground="White" Margin="0 0 408 0" FontSize="14" Style="{StaticResource CustomFont}"/>
            <Label x:Name="Player_14" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Right" Foreground="White" Margin="0 0 408 0" FontSize="14" Style="{StaticResource CustomFont}"/>
